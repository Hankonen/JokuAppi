<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AmpuAppi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#69a8bb</item>
        <item name="colorPrimaryVariant">#69a8bb</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar_theme">
        <item name="android:background">@color/toolbar_tausta</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:title">@string/toolbar_header</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="button_style">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/round_corners</item>
        <item name="android:layout_width">@dimen/dim_button_width</item>
        <item name="android:layout_height">@dimen/dim_button_height</item>
        <item name="android:textSize">@dimen/dim_button_text_size</item>
    </style>
    <style name="button_second_phase_style">
        <item name="backgroundTint">@color/toka_vaihe_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/round_corners</item>
        <item name="android:layout_width">@dimen/dim_button_width</item>
        <item name="android:layout_height">@dimen/dim_button_height</item>
        <item name="android:textSize">@dimen/dim_button_text_size</item>
    </style>

    <style name="OTW_or_IL_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/OTW_or_IL_REST</item>
        <item name="android:textSize">@dimen/dim_alertBox_size</item>
    </style>


    <style name="how_to_act_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/how_to_act_REST</item>
        <item name="android:textSize">@dimen/dim_alertBox_size</item>


    </style>

    <style name="to_location_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/to_location_REST</item>
        <item name="android:textSize">@dimen/dim_alertBox_size</item>

    </style>

    <style name="dia_text_style">

        <item name="android:textSize">@dimen/dia_text_size</item>

    </style>



</resources>